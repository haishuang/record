<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="2015-11-24 9:36:56" />

    <ImageView
        android:id="@+id/iv_chat_msg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_chat_time"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/iv_chat_head"
        android:src="@drawable/voice_left3"
        android:background="@drawable/chat_msg_background_default_right"
       />

    <ImageView
        android:id="@+id/iv_chat_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/iv_chat_msg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/login_head_image" />

    <TextView
        android:id="@+id/tv_chat_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_chat_msg"
        android:layout_marginRight="-50dp"
        android:layout_toLeftOf="@+id/iv_chat_msg"
        android:padding="5dp"
        android:text="发送失败"
        android:textColor="@color/color_red"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="gone"
        android:layout_alignBottom="@+id/iv_chat_msg"
        android:layout_marginRight="-50dp"
        android:layout_toLeftOf="@+id/iv_chat_msg"
        android:padding="5dp" />
</RelativeLayout>

